      {% if linklists.info.links != blank %}
        <div id="articles">  
          {% for link in linklists.info.links limit : settings.frontpage_info_count %}
            <div id="info{{ forloop.index }}" class="scroller">
              <div id="article" class="thumb">
                <div id="details">
                  <div id="figcaption" class="mobile">
                    <div id="title">                                  
                      <a href="{{ link.object.url }}" title="{{ link.object.title | escape }}">
                        <h3>{{ link.object.title | escape }}</h3>
                      </a> 
                    </div>
                  </div> 
                  
                  <div id="summary">                
                    {{ link.object.content | strip_html | truncatewords: 60 }}
