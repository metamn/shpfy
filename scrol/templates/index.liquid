{% if settings.frontpage_latest != "disabled" %}	
<div id="all" class="section">  
  <div id="title" class="block">
    <h4><a href="{{ collections.latest.url }}" title="View all products in {{ collections.latest.title }}">{{ collections.latest.title }}</a>
    </h4>
  </div>
  <div id="details" class="block">        
    {% if collections.latest.products.size > 0 %}
    <div id="articles">  
      {% for product in collections.latest.products limit : settings.frontpage_latest_count %}
        <div id="latest{{ forloop.index }}" class="scroller">
          <div id="article" class="thumb">
            {% include '_article.thumb' %}
          </div> <!-- article --> 
        </div>
      {% endfor %}
    </div> <!-- articles -->    
    {% else %}
      <div class="notice">   
        {% if settings.locale == "enabled" %}
          {% assign m1 = settings.locale_fp_latest_1 %}
          {% assign m2 = settings.locale_fp_latest_2 %}
          {% assign m3 = settings.locale_fp_latest_3 %}
          {% assign m4 = settings.locale_fp_latest_4 %}
        {% else %}
          {% assign m1 = "To see here the latest products please" %}
          {% assign m2 = "create a new collection" %}
          {% assign m3 = "and name it's handle to" %}
          {% assign m4 = "then add products to it" %}
        {% endif %}      
        {{ m1 }} <a href="/admin/custom_collections/new">{{ m2 }}</a>
        {{ m3 }} <strong>latest</strong> {{ m4 }}.
      </div>
    {% endif %}
  </div> 
  <div id="navigation" class="block">  
    <ul class="inline-list">
    {% for product in collections.latest.products limit : settings.frontpage_latest_count %}
      <li {% if forloop.first %} class="active" {% endif %}><a href="#latest{{ forloop.index }}">&bull;</a></li>
    {% endfor %}
    </ul>
  </div>
</div> 
{% endif %}


