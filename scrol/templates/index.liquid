                  <div id="figcaption" class="desktop">
                    <div id="title">                                  
                      <a href="{{ link.object.url }}" title="{{ link.object.title | escape }}">
                        <h3>{{ link.object.title | escape }}</h3>
                      </a> 
                    </div>
                  </div>                              
                </div> <!-- details -->
              </div> <!-- article --> 
            </div>
          {% endfor %}
