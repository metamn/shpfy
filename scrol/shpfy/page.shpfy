<div id="article" class="col col-1">
  <div id="details">
    <h1>
      <a href="{{ page.url }}" title="{{ page.title | escape }}">{{ page.title | escape }}</a>
    </h1>    
    <div id="summary">
      {{ page.content }}
    </div>
  </div>
</div>  

<div id="aside" class="navigation col col-2">
  <div id="details">
    include _navigation
    include _search
    include _share
  </div>
</div>
