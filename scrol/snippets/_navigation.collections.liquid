{% if collections.size > 0 %}
  <ul class="inline-list collections">
    {% for i in collections limit : settings.coll_coll_count %}
      {% if collection.url == i.url %} 
        {% assign klass = "collection active" %}
      {% else %}
        {% assign klass = "collection" %}
      {% endif %}
      <li>
        <a href="{{ i.url }}" title="{{ i.title | upcase }}" class="{% if forloop.last %} last {% endif %} {{ klass }}">{{ i.title }}</a></li>
    {% endfor %}
    
    {% for i in collections offset : settings.coll_coll_count | plus : 1 %}
      {% if forloop.first %}
        <li><span class="show-more link">&rarr;</span></li>
        <span class="hidden">          
      {% endif %}
    
      {% if collection.url == i.url %} 
        {% assign klass = "collection active" %}
      {% else %}
        {% assign klass = "collection" %}
      {% endif %}
      <li>
        <a href="{{ i.url }}" title="{{ i.title | upcase }}" class="{% if forloop.last %} last {% endif %} {{ klass }}">{{ i.title }}</a></li>
     
      {% if forloop.last %}
        </span>
      {% endif %}     
  {% endfor %} 
  </ul>
{% endif %}    

