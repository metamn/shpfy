body {
  background: url(custom_background.jpg) {{ settings.c_b }}
  color: {{ settings.c_t }}
}


.container {
  {% if settings.c_t_sh == blank %}
    text-shadow: none;
  {% else %}
    text-shadow: 1px 1px {{ settings.c_t_sh }}; 
  {% endif %}
}


a {
  color: {{ settings.c_l_t }};
  {% if settings.c_l_t_sh == blank %}
    text-shadow: none;
  {% else %}
    text-shadow: 1px 1px {{ settings.c_l_t_sh }}; 
  {% endif %}
}
a:hover {
  color: {{ settings.c_lh_t }};
  {% if settings.c_lh_t_sh == blank %}
    text-shadow: none;
  {% else %}
    text-shadow: 1px 1px {{ settings.c_lh_t_sh }}; 
  {% endif %}
}


.notice {
  background: {{ settings.c_mn }};
  color: {{ settings.c_mn_t }};
  {% if settings.c_mn_t_sh == blank %}
    text-shadow: none;
  {% else %}
    text-shadow: 1px 1px {{ settings.c_mn_t_sh }}; 
  {% endif %}
}
.notice a, .notice a:hover {
  text-decoration: {{ c_mn_l }};
}
.success {
  background: {{ settings.c_ms }};
  color: {{ settings.c_ms_t }};
  {% if settings.c_ms_t_sh == blank %}
    text-shadow: none;
  {% else %}
    text-shadow: 1px 1px {{ settings.c_ms_t_sh }}; 
  {% endif %}
}
.error {
  background: {{ settings.c_me }};
  color: {{ settings.c_me_t }};
  {% if settings.c_me_t_sh == blank %}
    text-shadow: none;
  {% else %}
    text-shadow: 1px 1px {{ settings.c_me_t_sh }}; 
  {% endif %}
}


input, textarea, a.button {
  -moz-box-shadow: 0 1px 0 0 {{ settings.c_b_sh }} inset;
  -webkit-box-shadow: 0 1px 0 0 {{ settings.c_b_sh }} inset;
  box-shadow: 0 1px 0 0 {{ settings.c_b_sh }} inset;
  background-color: {{ settings.c_b }};
  background: -moz-linear-gradient(center top , {{ settings.c_b }} 5%, {{ settings.c_b_gb }} 100%) repeat scroll 0 0 {{ settings.c_b }};
  background: -webkit-linear-gradient(top, {{ settings.c_b }}, {{ settings.c_b_gb }}) repeat scroll 0 0 {{ settings.c_b }};
  border: 1px solid {{ settings.c_b_b }};
  color: {{ settings.c_b_t }} !important;
  text-decoration: none !important;
  text-shadow: 1px 1px 0 {{ settings.c_b_t_sh }};
}
input.button:hover, a.button:hover {
  background-color: {{ settings.c_b_gb }};
  background: -moz-linear-gradient(center top , {{ settings.c_b_gb }} 5%, {{ settings.c_b }} 100%) repeat scroll 0 0 {{ settings.c_b_gb }};
  background: -webkit-linear-gradient(top, {{ settings.c_b_gb }}, {{ settings.c_b }}) repeat scroll 0 0 {{ settings.c_b_gb }};
}
input.text, textarea {
  background: {{ settings.c_i }};
}


#sale input, #sale textarea, #sale a.button {
  -moz-box-shadow: 0 1px 0 0 {{ settings.c_sb_sh }} inset;
  -webkit-box-shadow: 0 1px 0 0 {{ settings.c_sb_sh }} inset;
  box-shadow: 0 1px 0 0 {{ settings.c_sb_sh }} inset;
  background-color: {{ settings.c_sb }};
  background: -moz-linear-gradient(center top , {{ settings.c_sb }} 5%, {{ settings.c_sb_gb }} 100%) repeat scroll 0 0 {{ settings.c_sb }};
  background: -webkit-linear-gradient(top, {{ settings.c_sb }}, {{ settings.c_sb_gb }}) repeat scroll 0 0 {{ settings.c_sb }};
  border: 1px solid {{ settings.c_sb_b }};
  color: {{ settings.c_sb_t }} !important;
  text-decoration: none !important;
  text-shadow: 1px 1px 0 {{ settings.c_sb_t_sh }};
}
#sale input.button:hover, #sale a.button:hover {
  background-color: {{ settings.c_sb_gb }};
  background: -moz-linear-gradient(center top , {{ settings.c_sb_gb }} 5%, {{ settings.c_sb }} 100%) repeat scroll 0 0 {{ settings.c_sb_gb }};
  background: -webkit-linear-gradient(top, {{ settings.c_sb_gb }}, {{ settings.c_sb }}) repeat scroll 0 0 {{ settings.c_sb_gb }};
}



#header #line {
  border-bottom: 2px dotted {{ settings.c_sh }};
}
#header #shopping {
  background: {{ settings.c_sh }};  
  color: {{ settings.c_sh_t }};
  {% if settings.c_sh_t_sh == blank %}
    text-shadow: none;
  {% else %}
    text-shadow: 1px 1px {{ settings.c_sh_t_sh }}; 
  {% endif %}
}
#header #shopping a, #header #shopping a:visited {
  color: {{ settings.c_sh }};
  {% if settings.c_sh_t_sh == blank %}
    text-shadow: none;
  {% else %}
    text-shadow: 1px 1px {{ settings.c_sh_t_sh }}; 
  {% endif %}
}


#vendors.section #article #summary, #article, #aside, #vendors #articles, #info #articles {
  background: {{ settings.c_fp }}
  color: {{ settings.c_t }}
}
.section #title h4 a {
  background: {{ settings.c_fp_t_b }};
}
#vendors.section #article li a, #vendors.section #article li a:visited {
  background: {{ settings.c_fp_v }};
  color: {{ settings.c_fp_v_t }};
}
.section #navigation li a {
  color: {{ settings.c_fp_ni }};
}
.section #navigation li.active a {
  color: {{ settings.c_fp_n }};
}



#article #summary {
  background: {{ settings.c_p_s }};
  color: {{ settings.c_p_s_t }};
  text-shadow: none;
}
#summary a, #summary a.visited  {
  text-decoration: underline;
  color: {{ settings.c_p_s_l }};
  text-shadow: none;
}




#navigation.collections .title, #navigation.collections .description {
  background: {{ settings.c_c_t }};
  color: {{ settings.c_c_t_t }};
}
#navigation.collections .collections {
  background: {{ settings.c_c_c }};
  color: {{ settings.c_c_c_t }}
}
#navigation.collections .types {
  background: {{ settings.c_c_pt }};
  color: {{ settings.c_c_pt_t }}
}
#navigation.collections .vendors {
  background: {{ settings.c_c_v }};
  color: {{ settings.c_c_v_t }}
}
#navigation.collections .tags {
  background: {{ settings.c_c_ta }};
  color: {{ settings.c_c_ta_t }}
}
#navigation.collections .tags a {
  color: {{ settings.c_c_ta_t }}
  {% if settings.c_c_ta_sh == blank %}
    text-shadow: none;
  {% else %}
    text-shadow: 1px 1px {{ settings.c_c_ta_sh }}; 
  {% endif %}
}



#paginate span {
  background: {{ settings.c_pag }};
  border-bottom: 1px solid {{ settings.c_pag_b }};
}



.product #article #thumbs {
  background: {{ settings.c_prod }};
}
.product #article #thumbs img {
  border: .36em solid {{ settings.c_prod_b }};
}




.blog #article #meta, .article #article #meta {
  background: {{ settings.c_blog_m }};
}
ul.comments li {
  background: {{ settings.c_blog_comm }};
}

