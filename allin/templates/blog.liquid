<div id="section" class="articles col col-1">
  <div id="details">
    {% assign tags = "" %}
      {% for tag in blog.all_tags %}
        {% if current_tags contains tag %}
          {% capture tags %}
            {{ tag }}
          {% endcapture %}
        {% endif %}
      {% endfor %}
      
      <h1>
        <a href="{{ shop.url}}/{{ blog.url }}">
          {{ blog.title }}
          {% if tags != blank %}
            // {{ tags }}
          {% endif %}
        </a>
      </h1>
  
    {% if blog.articles.size > 0 %}
      {% paginate blog.articles by 10 %}        
        <div id="articles">
          {% for article in blog.articles %}
            <div id="article" class="blog">
              <div id="details">  
                <div id="figcaption">
                  <div id="title">  
                    <h3>
                        <a href="{{ article.url }}" title="{{ article.title }}"> {{ article.title | escape }} </a>
                    </h3>
                  </div>
                </div>
                <div id="meta">
                  {% if settings.locale == "enabled" %}
                    {{ settings.locale_by }}
                  {% else %}
                    By  
                  {% endif %}
                   {{ article.author }}  
                  
                  {% if settings.locale == "enabled" %}
                    {{ settings.locale_on }}
                  {% else %}
                    on  
                  {% endif %} 
                   
                   {{ article.created_at | date: "%B %d, %Y" }}
                  {% if blog.comments_enabled? %}
                    &mdash; 
                    <a href="{{article.url}}#comments">{{ article.comments.size }} 
                    {% if settings.locale == "enabled" %}
                      {{ settings.locale_comments }}
                    {% else %}
                      comments  
                    {% endif %}           
                    </a>
                  {% endif %}
                  
                  {% unless article.tags  == blank %}
                    . 
                    {% if settings.locale == "enabled" %}
                      {{ settings.locale_tagged }}: 
                    {% else %}
                      Tagged with   
                    {% endif %}
                    {% for tag in article.tags %}
                      <a href="{{ shop.url}}/blogs/{{ blog.handle }}/tagged/{{ tag | handleize }}">{{ tag }}</a>
                    {% endfor %}
                  {% endunless %} 
                </div>
                {% if article.excerpt != blank %}
                  <div id="summary" class="text">                
                     {{ article.excerpt }}
                  </div>                  
                {% endif %}
              </div>
            </div> 
          {% endfor %}
        </div> <!-- articles --->

       	{% if paginate.pages > 1 %}
        <div id="paginate" class="">
          {{ paginate | default_pagination }}
        </div>
        {% endif %}	        
       {% endpaginate %}	
    
    {% else %}
      {% if settings.snippets == "enabled" %}
      {% else %}
        <h1>We did not found any posts for you.</h1>
        <div id="summary">
          <p>Please try searching <strong>again</strong>, browse the <strong>menu</strong> or the <strong>sidebar</strong> links.</p> 
        </div>
      {% endif %}  
    {% endif %}  
  </div>  
</div>

<div id="sidebar" class="col col-2">  
  <div id="aside">    
    <ul id="share" class="inline-list">
      <li class="twitter">
        <a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-via="metamn">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>          
      </li>
      <li class="facebook">
        <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like layout="button_count" show_faces="true" width="150"></fb:like>              
      </li>
    </ul> 
    
    
    <h4>
    {% if settings.locale == "enabled" %}
      {{ settings.locale_article_posts }}
    {% else %}
      Latest blog posts
    {% endif %}
    </h4>
    <ul class="hoverable">
      {% for article in blog.articles limt: 3%}
        <li>
          <a href="{{ article.url }}" title="{{ article.title }}">
            {{ article.title }}            
          </a>
          <span class="date">on {{ article.created_at | date: "%B %d, %Y" }}</span>
        </li>
      {% endfor %}
    </ul>
        
    <h4>
    {% if settings.locale == "enabled" %}
      {{ settings.locale_article_comments }}
    {% else %}
      Recent comments
    {% endif %}
    </h4>
    <ul class="hoverable">
      {% assign comments_found = false %}
      {% for article in blog.articles limt: 3%}		   
        {% for comment in article.comments limit: 2 %}
          <li>
            <a href="{{ comment.url }}" title="Comment on {{ article.title }}">
              "{{ comment.content | strip_html | truncatewords: 20 }}"
            </a>
            <span class="date">by {{ comment.author }}</span>
          </li>
          {% assign comments_found = true %}
        {% endfor %}
      {% endfor %}
      
      {% unless comments_found %}
        <li>
          {% if settings.locale == "enabled" %}
            {{ settings.locale_article_no_comments }}
          {% else %}
            No comments were posted yet.
          {% endif %}        
        </li>
      {% endunless %}
    </ul>
  </div>
  
  <div id="navigation" class="collections block">
    {% if collections.size > 0 %}
      <span class="collections">
        {% for i in collections %}
          {% if collection.url == i.url %} 
            {% assign klass = "collection active" %}
          {% else %}
            {% assign klass = "collection" %}
          {% endif %}
          <a href="{{ i.url }}" title="{{ i.title | upcase }}" class="{% if forloop.last %} last {% endif %} {{ klass }}">{{ i.title }}</a>
        {% endfor %}
      </span>
    {% endif %}    
    
    {% if shop.types.size > 0 %}
    <span class="types"> 
    	{% for product_type in shop.types %}
        {{ product_type | link_to_type  }}          
      {% endfor %}
    </span>    
    {% endif %}
    
    {% if shop.vendors.size > 0 %}
    <span class="vendors">
      {% for product_vendor in shop.vendors %}
        {{ product_vendor | link_to_vendor  }}      
      {% endfor %}      
    </span>
    {% endif %}
  </div>
</div>

