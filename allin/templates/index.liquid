      {% if shop.types.size > 0 %}
        <div id="vendor2" class="scroller">
          <ul>
            {% for type in shop.types  %}
              <li>{{ type | link_to_type }}</li>
            {% endfor %}
          </ul>
        </div>
      {% endif %}      
    </div> <!-- articles -->    
  </div> 
  <div id="navigation" class="desktop col-2">
    <ul class="inline-list">
    {% if shop.vendors.size > 0 %}  
