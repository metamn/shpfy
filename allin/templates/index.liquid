{% if settings.frontpage_collections != "disabled" %}	
<div id="collections" class="section col-1"> 
  <div id="title" class="block">
    <h1>Collections</h1>
  </div> 
  <div id="details" class="block">        
    {% if collections.size > 0 %}
    <div id="articles">  
      {% for collection in collections limit : settings.frontpage_collections_count %}
        <div id="collection{{ forloop.index }}" class="scroller">
          {% if collection.products.size > 0 %}
            {% for product in collection.products limit : 1 %}
              <div id="article" class="thumb">
                <div id="details">                    
                  <div id="figcaption">
                    <div id="title">
                      <a href="{{ collection.url }}" title="{{ collection.title | escape }}">
                      <h3>{{ collection.title | escape }}</h3></a>
                    </div> 
                    {% if collection.description != blank %}
                    <div id="description">                
                      {{ collection.description }}
                    </div>  
                    {% endif %}
                  </div>
                  <div id="figure">
                    <a href="{{ collection.url }}" title="{{ collection.title | escape }}">
                      <img src="{{ product.featured_image | product_img_url: 'medium' }}" alt="{{ product.title | escape }}" /></a>                
                  </div>
                               
                </div> <!-- details -->
              </div> <!-- article --> 
            {% endfor %}
          {% endif %}
        </div>
      {% endfor %}
    </div> <!-- articles -->    
    {% else %}
      <div class="notice">        
        &nbsp;
      </div>
    {% endif %}
  </div> 
  <div id="navigation" class="desktop block">  
    <ul class="inline-list">
    {% for collection in collections limit : settings.frontpage_collection_count %}
      <li><a href="#collection{{ forloop.index }}">&bull;</a></li>
    {% endfor %}
    </ul>
  </div>
  <div id="navigation" class="mobile">
    <a href="#top">[top]</a>
  </div>
</div> 
{% endif %}


{% if settings.frontpage_vendors != "disabled" %}	
