<div id="top"></div>
<div id="navigation" class="mobile">
  <ul class="inline-list">
    {% if settings.frontpage_all != "disabled" %}
      <li><a href="#all">{{ collections.all.title }}</a></li>
    {% endif %}
    {% if settings.frontpage_frontpage != "disabled" %}
      <li><a href="#frontpage">{{ collections.frontpage.title }}</a></li>
    {% endif %}
    {% if settings.frontpage_sale != "disabled" %}
      <li><a href="#sale">{{ collections.sale.title }}</a></li>
    {% endif %}
    {% if settings.frontpage_info != "disabled" %}
      <li><a href="#info">{{ linklists.info.title }}</a></li>
    {% endif %}
    {% if settings.frontpage_collections != "disabled" %}
      <li><a href="#collections">Collections</a></li>
    {% endif %}
    {% if settings.frontpage_vendors != "disabled" %}
      <li><a href="#vendors">Vendors & Types</a></li>
    {% endif %}
  </ul>
</div>

{% if settings.frontpage_all != "disabled" %}	
<div id="all" class="section col-1">  
  <div id="title" class="block">
    <h1><a href="{{ collections.all.url }}" title="View all products in {{ collections.all.title }}">{{ collections.all.title }}</a></h1>
  </div>
  <div id="details" class="block">        
    {% if collections.all.products.size > 0 %}
    <div id="articles">  
      {% for product in collections.all.products limit : settings.frontpage_all_count %}
        <div id="latest{{ forloop.index }}" class="scroller">
          <div id="article" class="thumb">
            <div id="details">                    
              <div id="figcaption">
                <div id="title">
                  <a href="{{ product.url | within: collections.all }}" title="{{ product.title | escape }}">
                  <h3>{{ product.title | escape }}</h3></a>
                </div>
                <div id="price">
                  {% if settings.locale == "enabled" %}
                    {% assign add = settings.locale_cart_add %}
                  {% else %}
                    {% assign add = "Add to cart" %}
                  {% endif %}
                  <a class="button" href="{{ product.url | within: collections.all }}" title="{{ product.title | escape }}">
                    {{ product.price | money }} &nbsp;&nbsp; {{ add }}</a>
                </div>
              </div>
              
              <div id="figure">
                <a href="{{ product.url | within: collections.all }}" title="{{ product.title | escape }}">
                  <img src="{{ product.featured_image | product_img_url: 'medium' }}" alt="{{ product.title | escape }}" /></a>                
              </div>
              
              <div id="summary">                
                  {{ product.description | strip_html | truncatewords: 30 }}
              </div>  
                           
            </div> <!-- details -->
          </div> <!-- article --> 
        </div>
      {% endfor %}
    </div> <!-- articles -->    
    {% else %}
      <div class="notice">        
        To see here the latest products please <a href="/admin/custom_collections/new">create a new collection</a>
        and name it's handle to <strong>all</strong> then add products to it.
      </div>
    {% endif %}
  </div> 
  <div id="navigation" class="desktop block">  
    <ul class="inline-list">
    {% for product in collections.all.products limit : settings.frontpage_all_count %}
      <li><a href="#latest{{ forloop.index }}">&bull;</a></li>
    {% endfor %}
    </ul>
  </div>
  <div id="navigation" class="mobile">
    <a href="#top">[top]</a>
  </div>
</div> 
{% endif %}


