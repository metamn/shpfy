  -khtml-box-shadow: 0px 1px 7px {{ settings.c_latest_p_sh_o }};
  -webkit-box-shadow: 0px 1px 7px {{ settings.c_latest_p_sh_o }};
}
#item.product .image {
  background: {{ settings.c_latest_img }};  
}
#more {
  text-shadow: 1px 1px 2px {{ settings.c_latest_h_t_sh }};
}



/* 

## Products on Sale 

*/

