#header #logo img {
  max-width: {{ settings.logo_width }}px;
  height: auto;
}


/*

  NOTICE: custom colors are meant to override the existing theme, they are applied after the existing theme is loaded.

*/

{% if settings.colors == "enabled" %}


/*

* The body background and colors are applied only to the #intro section. All other sections are styled differently.  

*/
body {
  background: {{ settings.c_intro_b }} url(custom_stripe.png);
  color: {{ settings.c_intro_t }};
}


/*

* Links are unstyled, ie. they look like normal text.

*/
a, a:visited, a:hover, :link, :visited {
  color: {{ settings.c_intro_t }};
}


/* 

* Links in post body, product description, page content etc. look like normal links + they are underlined.
* Underlining is defined in the original theme.
* Active links, on mouse over are inverted.
  
*/
.text a, .text a:visited, .text :link, .text :visited {
  color: {{ settings.c_intro_t }};
}
.text a:hover, .text a:focus, .text a:active {
  color: {{ settings.c_intro_b }} !important;
  background: {{ settings.c_intro_t }};
}


/* 

* There are special links for notification on Latest Products and Products on Sale (subscribe to newsletter or to social networks)

*/
.note, .note a {
  color: {{ settings.c_latest_n }};
}
.note a:hover {
  color: {{ settings.c_latest_n_hover }}; 
}


input, textarea, a.button {
    -moz-box-shadow: 0 1px 0 0 {{ settings.c_button_shadow }} inset;
    -webkit-box-shadow: 0 1px 0 0 {{ settings.c_button_shadow }} inset;
    box-shadow: 0 1px 0 0 {{ settings.c_button_shadow }} inset;
    background-color: {{ settings.c_button_b}}; 
    background: -moz-linear-gradient(center top , {{ settings.c_button_b }} 5%, {{ settings.c_button_b2 }} 100%) repeat scroll 0 0 {{ settings.c_button_b }};   
    border: 1px solid {{ settings.c_button_bo }};
    color: {{ settings.c_button_c }} !important;
    text-shadow: 1px 1px 0 {{ settings.c_button_c_sh }};
}
input.button:hover, a.button:hover {
    background-color: {{ settings.c_button_b_o }};
    background: -moz-linear-gradient(center top , {{ settings.c_button_b_o }} 5%, {{ settings.c_button_b2_o }} 100%) repeat scroll 0 0 {{ settings.c_button_b_o }};
}
input.text, textarea {
    background: none repeat scroll 0 0 {{ settings.c_input_b }};
}

.error {
  color: {{ setting.c_blog_comm_err_t }};  
  background: {{ setting.c_blog_comm_err_b }};
}
.notice {
  color: {{ setting.c_blog_comm_s_t }};  
  background: {{ setting.c_blog_comm_s_b }};
}


/* 

* Header and Footer are styled in the same way

*/
#header, #footer {
  background: {{ settings.c_h_b }};
  border-bottom: 1px solid {{ settings.c_h_bb }};
}
#header a, #header a:visited, #footer a, #footer a:visited, .menu .search {
  color: {{ settings.c_h_t }};
}


/* 

* The cart in header is highlighted

*/
.menu #item.cart {
  background: {{ settings.c_h_cart_b }} !important;
  color: {{ settings.c_h_cart_t }};      
}
.menu #item.cart .quantity {
  border-bottom: 1px dotted {{ settings.c_h_cart_t }};
}
.menu #item.cart a {
    color: {{ settings.c_h_cart_t }};
}


/* 

* Featured Products navigation 

*/
.index #featured .triangle-bottom {
  border-color: {{ settings.c_scroll_a }} transparent transparent;  
}
.index #featured .triangle-top {
  border-color: transparent transparent {{ settings.c_scroll_a }};  
}
.index #featured a .triangle-bottom {
  border-color: {{ settings.c_scroll_a }} transparent transparent;
}
.index #featured a .triangle-top {
  border-color: transparent transparent {{ settings.c_scroll_a }};
}
.index #featured a:hover .triangle-bottom {
  border-color: {{ settings.c_scroll_i }} transparent transparent;
}
.index #featured a:hover .triangle-top {
  border-color: transparent transparent {{ settings.c_scroll_i }};
}
.read-more a {
  color: {{ settings.c_read_more }};
}

/*

* Featured Products / product image styling:

  * the product image must have its background color set. This is usually white.
  * if the surrounding environment color (Featured Products background, the stripes) is light (close to white) then you should probably don't need a shadow for the Product image
  * otherwise, if the background is dark then you should add a shadow to the product image to reduce the contrast between white and the dark background.
  * if you add a shadow then you should add a padding to.
*/
.index #featured .image img, #product-image, #sidebar img, .cart #info li.image {
   background: {{ settings.c_intro_img_b }};
}
.index #featured .image img, #sidebar img, .product #product-image, .cart #info li.image {
  {% if settings.c_intro_img_sh == "enabled" %}
    -moz-box-shadow: 0 15px 25px -10px rgba(0, 0, 0, 0.7), 0 4px rgba(0, 0, 0, 0.1), 0 0 40px rgba(0, 0, 0, 0.1) inset;
    -khtml-box-shadow: 0 15px 25px -10px rgba(0, 0, 0, 0.7), 0 4px rgba(0, 0, 0, 0.1), 0 0 40px rgba(0, 0, 0, 0.1) inset;
    -webkit-box-shadow: 0 15px 25px -10px rgba(0, 0, 0, 0.7), 0 4px rgba(0, 0, 0, 0.1), 0 0 40px rgba(0, 0, 0, 0.1) inset;
  {% else %}
    -moz-box-shadow: none;
    -khtml-box-shadow: none;
    -webkit-box-shadow: none;
  {% endif %}
}
{% if settings.c_intro_img_sh == "enabled" %}
  .index #featured .image .inside .img img {
    max-width: 90%;  
    max-height: 90%;
    padding: {{ settings.c_intro_img_p }}em;
  }
  .product #product-image {
    padding: {{ settings.c_intro_img_p }}em;
  }
{% else %}
#sidebar img, .product #product-image img {
  border: 1px solid {{ settings.c_coll_tax_bo }}
}
{% endif %}



/* 

* Latest Products and Products on Sale are styled the same, only highlighting differs

*/

#latest-top.triangle-bottom {
  border-color: {{ settings.c_intro_b }} transparent transparent; 
}
#latest, #sales {
  background: {{ settings.c_latest_b }};
}

#latest .highlight, .collection .highlight {
  background: {{ settings.c_latest_h }};
}
#latest #hot {
  text-shadow: 1px 1px 2px {{ settings.c_latest_h_t_sh }};
  color: {{ settings.c_latest_h_t }};  
}

#sales .sale  {
  background: {{ settings.c_sales_h }};
  color: {{ settings.c_sales_h_t }};
}
#sales .sale a, #sales .sale a:hover {
  color: {{ settings.c_sales_h_t }};
}
#sales #price {
  color: {{ settings.c_sales_h }};
}
#sales #item.product #add-to-cart .sale {
  background: none;
  color: {{ settings.c_sales_h }};
}

#more {
  text-shadow: 1px 1px 2px {{ settings.c_more_sh }};
}


/*

* Product thumbnail styling

  * Product image must have its background set (usually white)
  * Product thumb must have a border or shadow around
*/
#item.product .image {
  background: {{ settings.c_thumb_img_b }};
}
#item.product {  
  background: {{ settings.c_thumb_img_b }};
  -moz-box-shadow: 0px 3px 10px {{ settings.c_thumb_sh }};
  -khtml-box-shadow: 0px 3px 10px {{ settings.c_thumb_sh }};
  -webkit-box-shadow: 0px 3px 10px {{ settings.c_thumb_sh }};
}
#item.hover {  
  -moz-box-shadow: 0px 1px 7px {{ settings.c_thumb_sh_o }};
  -khtml-box-shadow: 0px 1px 7px {{ settings.c_thumb_sh_o }};
  -webkit-box-shadow: 0px 1px 7px {{ settings.c_thumb_sh_o }};
}
#item.product #figcaption {
  background: {{ settings.c_thumb_t }};  
}



/*

* Sidebar, Pagination

*/
#sidebar {
  background: {{ settings.c_coll_tax_b }};
}
#sidebar h2 {
  color: {{ settings.c_coll_tax_ti }};
}
#sidebar .accordion h4 {
  border-bottom: 1px solid {{ settings.c_coll_u }};
}
#sidebar ul.list li {
  border-bottom: 1px solid {{ settings.c_coll_u_li }};
}
#sidebar ul.list li a, #sidebar ul.list li a:visited {
  color: {{ settings.c_coll_tax_t }};
}
#sidebar ul.list li.active, #sidebar #tags .active {
  background: {{ settings.c_coll_h }};
}
#sidebar .date {
  color: {{ settings.c_coll_d }};
}
.collection #navigation #tags a {
  color: {{ settings.c_coll_tax_t }};
}
.collection #navigation #tags a:visited {
  color: {{ settings.c_coll_h }};
}

#paginate a, #paginate a:visited {
  background: {{ settings.c_pagin_b }};
  color: {{ settings.c_pagin_t }};
}
#paginate .current, #paginate .deco {
  background: {{ settings.c_pagin_c_b }};
  color: {{ settings.c_pagin_c_t }};
}


/* 

* Checkout 

*/
.cart #info ul {
  border-bottom: 1px solid {{ settings.c_cart_bo }};
}



/* 

## Blog 

*/
