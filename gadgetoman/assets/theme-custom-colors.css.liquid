#header {
  background: {{ settings.c_h_b }};
}
#header a, #header a:visited, .menu .search {
  color: {{ settings.c_h_t }};
  text-decoration: none;
}

#header #logo img {
  max-width: {{ settings.logo_width }};
  width: {{ settings.logo_width }};
  height: auto;
}

.menu #item.cart {
  background: {{ settings.c_h_cart_b }} !important;
  color: {{ settings.c_h_cart_t }}; 
}
.menu #item.cart .quantity {
  border-bottom: 1px dotted {{ settings.c_h_cart_t }};
}
.menu #item.cart a {
  color: {{ settings.c_h_cart_t }}; 
}
.menu .triangle-left {
  border-color: transparent {{ settings.c_h_b }} transparent transparent;
}


.index #intro, .collection #navigation, #info {
  background: {{ settings.c_intro_b }} url(custom_stripe.png);  
  color: {{ settings.c_intro_t }};
  border-bottom: 1px solid {{ settings.c_latest_b }};
}
.index #intro a, .collection #navigation a, #info a {
  color: {{ settings.c_intro_t }};
}
.index #featured #scroller li.inactive {
  color: {{ settings.c_scroll_i }};
}
.index #featured #scroller li.active {
  color: {{ settings.c_scroll_a }};
}

.text b {
  background: {{ settings.c_intro_h }};
}
#latest-top.triangle-bottom {
  border-color: {{ settings.c_intro_b }} transparent transparent;
}


#latest {
  background: {{ settings.c_latest_b }};
  color: {{ settings.c_latest_t }};
}
#latest h3 .highlight {
  background: {{ settings.c_latest_h }};
}
#latest .arrow-right {
  border-color: transparent transparent transparent {{ settings.c_latest_h }};
}
.note, .note a {
  color: {{ settings.c_latest_n }};
}
#latest #item, .collection #items #item {
  -moz-box-shadow: 0 3px 10px {{ settings.c_latest_p_sh }};
  background: none repeat scroll 0 0 {{ settings.c_latest_p_b }};
}
#latest #item a, .collection #items #item a {
  color: {{ settings.c_latest_p_t }};
}


#sales {
  background: {{ settings.c_sales_b }};
  color: {{ settings.c_sales_t }};
}
#sale h1 {
  background: {{ settings.c_sales_h }};
  color: {{ settings.c_sales_h_t }};
}
#sale .arrow-right {
  border-color: transparent transparent transparent {{ settings.c_sales_h }};
}
#sales #item .meta .price {
  color: {{ settings.c_sales_h }};
}
#sales #item.hover .meta .price {
  color: {{ settings.c_sales_h_t }};
  background: {{ settings.c_sales_h }};
}
#sales .note, #sales .note a {
  color: {{ settings.c_sales_n }};
}
#sales #item {  
  background: none repeat scroll 0 0 {{ settings.c_sales_p_b }};
}
#sales #item a {
  color: {{ settings.c_sales_p_t }};
}
#sales #item .meta .price {
  color: {{ settings.c_sales_h }};
}
#sales #item.hover .meta .price {
  color:{{ settings.c_sales_h_t }};
  background: {{ settings.c_sales_h }};
}



#ecosystem {
  background: {{ settings.c_eco_b }};
  color: {{ settings.c_eco_t }};
}
#ecosystem-top.triangle-top {
  border-color: transparent transparent {{ settings.c_eco_b }};
}
.date {
  color: {{ settings.c_eco_d }};
}
#ecosystem .list li {
  border-bottom: 1px solid {{ settings.c_eco_h }}
}


#footer {
  background: {{ settings.c_f_b }};
}
#footer a, #footer a:visited {
  color: {{ settings.c_f_t }};
}


.page .title {
  background: {{ settings.c_prod_h1_b }};
  color: {{ settings.c_prod_h1_t }};
}
.product #product-image {
  background: {{ settings.c_prod_img_b }};
}
.product #description {
  background: {{ settings.c_prod_descr_b }};
  color: {{ settings.c_prod_descr_t }};
}


.collection #current-collection, #content  {
  background: {{ settings.c_coll_info_b }};
  color: {{ settings.c_coll_info_t }};
}
#taxonomies, #sidebar  {
  background: {{ settings.c_coll_tax_b }};
  color: {{ settings.c_coll_tax_t }};
}


#shopping #thumbs, #shopping #meta {
  border-top: 1px solid {{ settings.c_coll_u }};
}
.accordion h3, ul.list li {
  border-bottom: 1px solid {{ settings.c_coll_u }};
}
ul.list li.active, .collection #current-collection  .active,.collection #navigation #tags a:visited {
  background: {{ settings.c_coll_h }};
}

#paginate .current {
  background: {{ settings.c_pagin_c_b }};
  color: {{ settings.c_pagin_c_t }};
}
#paginate a, #paginate a:visited {
  background: {{ settings.c_pagin_b }};
  color: {{ settings.c_pagin_t }};
}


.box {
  background: {{ settings.c_box_b }};
  color: {{ settings.c_box_t }};
}
.box a, .box a:visited {
  color: {{ settings.c_box_t }};
}
.box .accordion h3, .box .accordion ul.list li {
  border-bottom: 1px solid {{ settings.c_box_h }};
}
.article .meta {
  background: {{ settings.c_box_b }};
}




#eco {
  background: {{ settings.c_latest_b }};
}
#eco.page, #eco.blog, #eco.cart, #eco.article {
 background: {{ settings.c_intro_b }} url(custom_stripe.png);
}
body {
  background: {{ settings.c_latest_b }};
  color: {{ settings.c_latest_t }};
}
.text a, .text a:visited, .text :link, .text :visited {
  color: {{ settings.c_latest_t }};
  text-decoration: underline;
}
.text a:hover, .text a:focus, .text a:active {
  color: {{ settings.c_latest_b }};
  background: {{ settings.c_latest_t }};
  text-decoration: none;
}
.text b {
  background: {{ settings.c_info_h }};
  padding: 0 .32em;
  font-weight: normal;
}


