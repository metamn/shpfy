  color: {{ settings.c_latest_h_t }};  
}
#item.product {  
  background: {{ settings.c_latest_p_b }};
  -moz-box-shadow: 0px 3px 10px {{ settings.c_latest_p_sh }};
  -khtml-box-shadow: 0px 3px 10px {{ settings.c_latest_p_sh }};
  -webkit-box-shadow: 0px 3px 10px {{ settings.c_latest_p_sh }};
