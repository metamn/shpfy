body {
  -webkit-text-size-adjust: none; 
  font-family: 'Ubuntu', arial, serif;  
}


body {
  background: {{ settings.c_latest_b }} url(custom_stripe.png);
  color: {{ settings.c_latest_t }};
}


/* 

## Links

* The *default* style is simple, no underline, no hover
*/
a, a:visited, a:hover, :link, :visited {
  text-decoration: none; 
  color: {{ settings.c_latest_t }};
  background: none;
}
/* 
  * **a.underline** forces text decoration (!important)
*/
a.underline {
  text-decoration: underline !important;
}

/* 
* Plain text style for post body, product description, pages etc. 
  * class name: **.text**
  * default style: underlined
*/
.text a, .text a:visited, .text :link, .text :visited {
  color: {{ settings.c_latest_t }};
  background: {{ settings.c_a_b }};
  text-decoration: underline;
  padding: 0 .32em;
}
/*
  * hover: inverted colors 
*/
.text a:hover, .text a:focus, .text a:active {
  color: {{ settings.c_a_h }} !important;
  background: {{ settings.c_a_h_b }};
  text-decoration: none;
}
/*
  * headings are unstyled using **a.title**
*/
a.title {
  text-decoration: none !important;
}

/* 
* Notes, highlighting texts
  * class name: **.note**
  * default style: gray with shadow, changing color on hover, no decoration 
*/
.note, .note a {
  color: {{ settings.c_latest_n }};
  text-decoration: none;  
}
.note a:hover {
  color: {{ settings.c_latest_n_hover }}; 
}


/* 

## Forms 
Forms are completely re-styled
* 
*/
input, select, textarea, a.button {
	-moz-box-shadow: inset 0px 1px 0px 0px {{ settings.c_button_shadow }};
	-webkit-box-shadow: inset 0px 1px 0px 0px {{ settings.c_button_shadow }};
	box-shadow: inset 0px 1px 0px 0px {{ settings.c_button_shadow }};
	
	background: -webkit-gradient( linear, left top, left bottom, color-stop(0.05, {{ settings.c_button_b }}), color-stop(1, {{ settings.c_button_b2 }}) );
	background: -moz-linear-gradient( center top, {{ settings.c_button_b }} 5%, {{ settings.c_button_b2 }} 100% );
	filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='{{ settings.c_button_b }}', endColorstr='{{ settings.c_button_b2 }}');
	background-color: {{ settings.c_button_b }};
	
	border: 1px solid {{ settings.c_button_b }};
	
	color: {{ settings.c_button_c }} !important;	
	text-decoration:none !important;
	text-shadow: 1px 1px 0px {{ settings.c_button_c_sh }};	
}
input.button:hover, select:hover, a.button:hover {
	background: -webkit-gradient( linear, left top, left bottom, color-stop(0.05, {{ settings.c_button_b2 }}), color-stop(1, {{ settings.c_button_b }}) );
	background: -moz-linear-gradient( center top, {{ settings.c_button_b2 }} 5%, {{ settings.c_button_b }} 100% );
	filter:progid:DXImageTransform.Microsoft.gradient(startColorstr='{{ settings.c_button_b2 }}', endColorstr='{{ settings.c_button_b }}');
	background-color: {{ settings.c_button_b2 }};
}
input.text, textarea {
  background: {{ settings.c_input_b }};
}
select, select:hover {
  background: none;
}


.missing {
  background: lightyellow;
}


/* 

## Header 

*/


#header {
  background: {{ settings.c_h_b }};
  border-bottom: 1px solid {{ settings.c_h_bb }};
}
#header a, #header a:visited, #footer a, #footer a:visited, .menu .search {
  color: {{ settings.c_h_t }};
  text-decoration: none;
}
#header #logo img {
  max-width: {{ settings.logo_width }}px;
  width: {{ settings.logo_width }}px;
  height: auto;
}
.menu #item.cart {
  background: {{ settings.c_h_cart_b }} !important;
  color: {{ settings.c_h_cart_t }};      
}
.menu #item.cart .quantity {
  border-bottom: 1px dotted {{ settings.c_h_cart_t }};
}
.menu #item.cart a {
  color: {{ settings.c_h_cart_t }}; 
}
.triangle-left {
  border-color: transparent {{ settings.c_h_b }} transparent transparent;
}



/* 

## Index 

*/


.index #featured .triangle-bottom {
  border-color: {{ settings.c_scroll_a }} transparent transparent;  
}
.index #featured .triangle-top {
  border-color: transparent transparent {{ settings.c_scroll_a }};  
}
.index #featured a .triangle-bottom {
  border-color: {{ settings.c_scroll_a }} transparent transparent;
}
.index #featured a .triangle-top {
  border-color: transparent transparent {{ settings.c_scroll_a }};
}
.index #featured a:hover .triangle-bottom {
  border-color: {{ settings.c_scroll_i }} transparent transparent;
}
.index #featured a:hover .triangle-top {
  border-color: transparent transparent {{ settings.c_scroll_i }};
}
.index #featured .read-more a {
  color: {{ settings.c_read_more }};
}
.index #featured .image img {
  -moz-box-shadow: 0 15px 25px -10px rgba(0, 0, 0, 0.7), 0 4px rgba(0, 0, 0, 0.1), 0 0 40px rgba(0, 0, 0, 0.1) inset;
  -khtml-box-shadow: 0 15px 25px -10px rgba(0, 0, 0, 0.7), 0 4px rgba(0, 0, 0, 0.1), 0 0 40px rgba(0, 0, 0, 0.1) inset;
  -webkit-box-shadow: 0 15px 25px -10px rgba(0, 0, 0, 0.7), 0 4px rgba(0, 0, 0, 0.1), 0 0 40px rgba(0, 0, 0, 0.1) inset;
}


/* 

## Latest Products 

*/

