<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Transitional//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-transitional.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">

<head>
	<title>{{ shop.name }} &#124; {{ page_title }}</title>
	<meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
	{{ 'base.css' | asset_url | stylesheet_tag }}	
	{{ 'grid.css' | asset_url | stylesheet_tag }}	
	{{ 'theme.css' | asset_url | stylesheet_tag }}	
	<!--[if lte IE 6]>{{ 'ie.css' | asset_url | stylesheet_tag }}<![endif]-->
	
			
	{{ 'jquery-1.4.3.min.js' | asset_url | script_tag }}
	{{ 'jquery.init.js' | asset_url | script_tag }}
	
	<!--
	<link href='http://fonts.googleapis.com/css?family=Lato:regular,bold,900' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Cabin:bold' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Arimo:regular,italic,bold,bolditalic' rel='stylesheet' type='text/css'>
  -->
  <link href='http://fonts.googleapis.com/css?family=Ubuntu:regular,italic,bold,bolditalic' rel='stylesheet' type='text/css'>

	
	{{ 'option_selection.js' | shopify_asset_url | script_tag }}
	{{ content_for_header }}	
</head>

<body>	
	<div id="header" class="block">
	  <div class="container">
		  <div id="logo" class="left">
		    {% if settings.logo == "enabled" %}
			    <img src="{{ "logo.png" | asset_url }}" alt="{{ shop.name | escape }}" /></a>
			  {% else %}
			    <h1><a href="/" title="{{ shop.name }}">{{ shop.name | escape }}</a></h1>
			  {% endif %}
			</div>
			<div id="navigation" class="menu right alignright">
			  {% capture active_url %}
			    {% if template == "index" %}
			      /
			    {% elsif template == "collection" %}
			      /collections/{{ collection.handle }}
			    {% elsif template == "product" %}
			      {% if collection %}
			        /collections/{{ collection.handle }}
			      {% endif %}
			      /products/{{ product.handle }}
			    {% elsif template == "page" %}
			      /pages/{{ page.handle }}
			    {% elsif template == "blog" %}
			      /blogs/{{ blog.handle }}
			    {% elsif template == "cart" %}
			      /cart
			    {% elsif template == "search" %}
			      /search
			    {% endif %}
			  {% endcapture %}
			  
			  
			  <div id="main-menu" class="menuline right alignright">
				  {% if linklists.main-menu.links.size > 0 %}				
				    {% for link in linklists.main-menu.links %}
					  <div id="item" 
					    {% if forloop.last %}
					      {% if cart.item_count == 0 %} class="last"
					      {% endif %}
					    {% endif %}>
					    <a href="{{ link.url }}"{% if link.url == active_url %} class="active"{% endif %}>{{ link.title }}</a>
					  </div>
					  {% endfor %}
					{% endif %}
					  <div id="item" class="search last">
					    <span class="search link">Search</span>
					  </div>
				</div>
				<div class="clear"></div>
					
			  <div id="shopping-menu" class="menuline right alignright">	
			    {% if linklists.shopping-menu.links.size > 0 %}				
				    {% for link in linklists.shopping-menu.links %}
					  <div id="item" class="item"> 
					    {% if forloop.last %}
					      {% if cart.item_count == 0 %} class="last"
					      {% endif %}
					    {% endif %}>
					    <a href="{{ link.url }}"{% if link.url == active_url %} class="active"{% endif %}>{{ link.title }}</a>
					  </div>
					  {% endfor %}
					{% endif %}						
										
					<div id="item" class="search-menu">
				    <form action="/search" method="get">
			        <input class="text" type="text" name="q" /> 
			        <input class="link button rounded" type="submit" value="Search"  />
		        </form>
				  </div>
									
				  <div class="triangle-left"></div>						
				  <div id="item" class="cart last">					  					  		  				  
				    <a href="/cart"{% if template == "cart" %} class="active highlight"{% else %} class="highlight"{% endif %}>
				      <div class="quantity">Cart: {{ cart.item_count }} {{ cart.item_count | pluralize: 'item', 'items' }}</div>
				      <div class="price">{{ cart.total_price }} {{ shop.currency }}</div>
				    </a>			  
			    </div>			  
				</div>
				
			</div>			
		</div>
	</div>
	
	
	{% case template %}
	  {% when 'collection' or 'search' or 'blog' or 'article' %}
	    <div id="{{ template }}" class="{{ template }} collection block">
	  {% when 'page' or 'product' or 'cart' or 'not_found' %}
	    <div id="{{ template }}" class="{{ template }} page block">
	  {% else %}
	    <div id="{{ template }}" class="{{ template }} block">
	{% endcase %}			      
	
	{{ content_for_layout }}		    
	
	</div>
	
	
	<div id="eco" class="{{ template }} block link">
	  <div class="container">
	    <div id="icons">	    
	      <ul class="inline-list right">
	        <li><img src="{{ 'rss.png' | asset_url }}" alt="News" /></li>
	        <li><img src="{{ 'facebook.png' | asset_url }}" alt="Friends" /></li>
	        <li><img src="{{ 'twitter.png' | asset_url }}" alt="Buzz" /></li>
	      </ul>
	     </div>	   
	  </div>  
	</div>
	
	
	
	<div id="ecosystem" class="{{ template }} block hidden">
    <div class="container">
      <div id="ecosystem-top" class="triangle-top"></div>
      <div class="left col-1">
        
        <div id="blog">
          {% assign feed_url = "http://dodocase.posterous.com/rss.xml" %}
          {% assign feed_limit = 5 %}
          
          <script type="text/javascript">            
            var api = "http://ajax.googleapis.com/ajax/services/feed/load?v=1.0&callback=?&q={{ feed_url }}&num={{ feed_limit }}";
            jQuery.getJSON(api, function(data){				
				      // Check for error
				      if (data.responseStatus == 200) {	
					      // Process the feeds
					      var feed = data.responseData.feed;
					      var msg = '<h1>' + feed.title + '</h1>';
					      
					      msg += '<ul class="list">';		
		            for (var i=0; i<feed.entries.length; i++) {			
			            var entry = feed.entries[i];			
			            var entryDate = new Date(entry.publishedDate);
			            var pubDate = entryDate.toLocaleDateString();
			
			            msg += '<li><h5 class="article-title"><a href="'+ entry.link +'" title="View this feed at '+ feed.title +'">';				              
				          msg += entry.title + '<span class="date"> # ' + pubDate + '</span></a></h5></li>';
				          //msg += '<div class="summary">'+ entry.content + '</div></li>';
			          }			
			          msg += '</ul>';
			          
				      } else {
					      // Handle error if required
					      if (options.showerror)
						      if (options.errormsg != '') {
							      var msg = options.errormsg;
						      } else {
							      var msg = data.responseDetails;
						      };						      
				      };
				      jQuery("#feed").replaceWith(msg);
			      });            
          </script>
          <div id="feed">
            <img src="{{ 'loading.gif' | asset_url }}" alt="Loading feed ..." />
            Loading feed ...
          </div>          
        </div>
        
        
        <div id="follow">
          <div class="col facebook">
            <img src="{{ 'facebook.png' | asset_url }}" alt="Facebook" />
            <div class="counter">
              <script src="http://connect.facebook.net/en_US/all.js#xfbml=1"></script><fb:like layout="button_count" show_faces="true" width="150"></fb:like>
            </div>
          </div>
          <div class="col twitter">            
            <img src="{{ 'twitter.png' | asset_url }}" alt="Twitter" />
            <div class="counter">
              <a href="http://twitter.com/share" class="twitter-share-button" data-count="horizontal" data-via="metamn">Tweet</a><script type="text/javascript" src="http://platform.twitter.com/widgets.js"></script>          
            </div> 
          </div>         
        </div>
        <div class="clear"></div>
        
        
        <div id="twitter">
          <div id="items">
            {% assign twitter_id = "metamn" %}
            {% assign twitter_limit = 50 %}
          
            <script type="text/javascript">
              var counter = 0;
              var BreakException= {};
              
              try {
                jQuery.getJSON('http://twitter.com/statuses/followers.json?screen_name={{ twitter_id }}&callback=?',function(data){    
                if (data) {                
                  data.forEach(function(datum) {  
                    if (datum.screen_name) {
                      var str = '<div id="item">';
                      str += '<a href="http://twitter.com/' + datum.screen_name + '" title="' + datum.screen_name + '">';
                      str += '<img class="avatar" src="' + datum.profile_image_url + '" alt="' + datum.screen_name + '" /></a>';
                      str += '</div>';
                      jQuery('#ecosystem #twitter #items').append(str);
                      
                      counter++;
                    }                    
                    if(counter === {{ twitter_limit }}) throw BreakException;               
                  });
                } 
                });â€‹
              } catch(e) {
                  if (e!==BreakException) throw e;
              }           
            </script>          
          </div>
        </div>  
     
      </div>
      
      <div class="right col-2">
        <h1>Shopping Information</h1>
        <div id="subscribe">
          <h2>Subscribe</h2>
        </div>
      </div>    
    </div>
  </div> 
  

		
	<div id="footer" class="block">
	  <div class="container">
	    <ul class="menu inline-list right">
	      <li><a href="/">&copy; {{ "now" | date: "%Y" }} {{ shop.name }}</a></li>
	      {% if linklists.footer.links.size > 0 %}
			    {% for link in linklists.footer.links %}
				    <li><a href="{{ link.url }}">{{ link.title }}</a></li>
				  {% endfor %}
				{% endif %}
	    </ul>
		</div>
	</div>
			
</body>
</html>
