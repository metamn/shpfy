<div id="info" class="block">
  <div class="container">
    <h1>{{ blog.title }}</h1>
    
    <div id="content" class="col-1 left">
      {% if blog.articles.size > 0 %}
        {% paginate blog.articles by 10 %}        
	        <div id="articles">
	          {% for article in blog.articles %}
		          <div id="article">
		            <h4 class="title">
		              <a href="{{ article.url }}" title="{{ article.title }}">
		                {{ article.title }}
		                <span class="date"> # {{ article.created_at | date: "%B %d, %Y" }}</span>
		              </a>
		            </h4>
		            <div class="excerpt">
		              {{ article.content | truncate: 200 }}
		            </div>
		          </div>
	          {% endfor %}
	        </div>
	
	       	{% if paginate.pages > 1 %}
	          <div id="paginate">
		          {{ paginate | default_pagination }}
	          </div>
	        {% endif %}
	        
	       {% endpaginate %}	       	  
	    {% endif %}
    </div>

    <div id="sidebar" class="sidebar right col-2">     
      <ul class="inline-list">
        <li>Facebook</li>
        <li>Twitter</li>
        <li>RSS</li>
      </ul>
      Subscribe by e-mail.
      
      <h3>Recent comments</h3>
      <ul class="comments">
        {% for article in blog.articles %}		   
          {% for comment in article.comments %}
            <li>
              <a href="{{ article.url }}" title="Comment on {{ article.title }}">
                <blockquote>{{ comment.content | strip_html | truncate: 250 }}</blockquote>
              </a>
            </li>
          {% endfor %}
        {% endfor %}
      </ul>
    </div>
    
  </div>
</div>
    

