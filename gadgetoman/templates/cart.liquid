<div id="info" class="block">
  <div class="container">    
    {% if cart.item_count == 0 %}
      <h1>Your cart is empty</h1>
      <p><a href="/">Please visit our shop.</a></p>  
    {% else %}
      <h1>Your Shopping Cart</h1>
    {% endif %}
  
    <div id="content" class="col-1 left">
      {% if cart.item_count != 0 %}              
        <form action="/cart" method="post" id="cartform" name="cartform">
        <table>
        {% for item in cart.items %}
	      <tr class="first">
	        <td class="image" rowspan=2>
	          <a href="{{ item.product.url | within: collections.all }}">
	            <img src="{{ item.product.images.last | product_img_url: 'medium' }}" alt="{{ item.title | escape }}" />
	          </a>
	        </td>
		      <td class="info">
		        <h6 class="title"><a href="{{ item.product.url | within: collections.all }}">
		          {{ item.title }} <span>{{ item.price | money }}
		        </a></h6>		  
		      </td>
		      <td class="update">
		        <input type="text" class="quantity name="updates[]" id="updates_{{ item.variant.id }}" value="{{ item.quantity }}" onfocus="this.select();" />
			      <input type="hidden" name="id" value="{{ item.variant.id }}" />
			      <input type="submit" class="update" name="update" value="Update" id="update-cart" />
		      </td>
		      <td class="price">
			      {{ item.line_price | money }}
		      </td>
		      <td class="remove">
		        <a href="/cart/change/{{ item.variant.id }}?quantity=0">x</a>
		      </td>
	      </tr>
	      <tr class="second">
	        <td class="description" colspan=4>
	          {{ item.product.description | strip_html | truncate: 250 }}		  
	        </td>
	       </tr>
	      {% endfor %}
	      </table>
	
	      <div id="checkout">
		      <h4>
		        TOTAL: <span>{{ cart.total_price | money }} {{ shop.currency }}</span>
		        <span class="right"><input class="link button rounded" type="submit" id="getout" name="checkout" value="Proceed to checkout" /></span>
		      </h4>
	      </div>	
        </form>
      {% endif %}
    </div>

    <div id="taxonomies" class="right col-2">      
      <div class="accordion">        
        {% if collections.size > 0 %}
          <h3 class="first">All collections</h3>
          <div class="pane">        
            <ul class="list">
          	  {% for i in collections %}      	    
          		  <li {% if collection.url == i.url %} class="active"{% endif %}>
          		    <a href="{{ i.url }}" title="{{ i.title | upcase }}">{{ i.title | upcase }}</a>
          		  </li>
          		{% endfor %}
          	</ul>
          </div> 
        {% endif %}           
      
        {% if shop.vendors.size > 0 %}
          <h3>All vendors</h3>
          <div class="pane">   
            <ul class="list">
            	{% for product_vendor in shop.vendors %}
                <li>
                  {{ product_vendor | link_to_vendor  }}
                </li>
              {% endfor %}
            	</ul>
          </div>
        {% endif %}
        
        {% if shop.types.size > 0 %}
          <h3>All product types</h3>
          <div class="pane">   
            <ul class="list">
            	{% for product_type in shop.types %}
                <li>
                  {{ product_type | link_to_type  }}
                </li>
              {% endfor %}
            	</ul>
          </div>
        {% endif %}
        
        <h3>Search</h3>
        <div id="search" class="pane">        
		      <form action="/search" method="get">
			      <input class="text" type="text" name="q" /> 
			      <input class="link button greenb rounded" type="submit" value="Go"  />
		      </form>
        </div>
      </div>      
    </div>	  	
    
</div>

