<div id="intro" class="block">
  <div class="container">
    <div id="content" class="left col-1">
      
      <div id="logo" class="block">
        <h1><a href="/" title="{{ shop.name }}">{{ shop.name }}</a></h1>
      </div>
      
      {% assign article = pages.frontpage %}
      
      <div id="strapline" class="block">
        <h2>{{ article.title }}</h2>
      </div>
      
      <div id="text" class="block">        
        {% if article.content != "" %}      		
      		{{ article.content }}
      	{% else %}
      	  In <em>Admin &gt; Blogs &amp; Pages</em>, create a page with the handle <strong><code>frontpage</code></strong> and it will show up here.<br />
      	  {{ "Learn more about handles" | link_to "http://wiki.shopify.com/Handle" }}
      	{% endif %}
      </div>
    </div>
    
    <div id="featured" class="right col-2">
      {% for product in collections.frontpage.products limit: 1 offset: 0 %}
	      <div id="item">	              
          {% for image in product.images limit: 1 %}
            <a href="{{ product.url | within: collections.all }}" title="">	    
              <img src="{{ image | product_img_url: 'large' }}" alt="{{ product.title | escape }}" /></a>
          {% endfor %}
          <h6 class="title">
            <a href="{{ product.url | within: collections.all }}" title="">
              {{ product.title }} by {{ product.vendor }}
            </a>
          </h6>          
        </div>
	    {% endfor %}
    </div>
    
  </div>
</div>  

<div id="latest" class="block">
  <div class="container">
    <h3>Check out our latest items:</h3>
    {% for product in collections.all.products limit:5 %}
      <div id="item">	    
        <div class="image">	      
          {% for image in product.images limit: 1 %}
            <a href="{{ product.url | within: collections.all }}" title="">	    
              <img src="{{ image | product_img_url: 'small' }}" alt="{{ product.title | escape }}" /></a>
          {% endfor %}
        </div>
        <div class="title">
          <a href="{{ product.url | within: collections.all }}" title="">
            {{ product.title }} by {{ product.vendor }}
          </a>
        </div>
	    </div>
    {% endfor %}  
  </div>
</div>  
  
<div id="sales" class="block">
  <div class="container">
    <div id="sale" class="left col-1">
      <h1>%</h1>
      <div class="arrow-right"></div>
    </div>    
    <div id="items" class="right col-2">
      {% for product in collections.all.products limit: 4 %}  
      <div id="item">
        <div class="image">
          <a href="{{ product.url | within: collections.all }}">
            <img src="{{ product.featured_image | product_img_url: 'medium' }}" alt="{{ product.title | escape }}" />
          </a>
        </div>
        <div class="add-to-cart">
          <img src="{{ 'sales-add-to-cart.png' | asset_url }}"/>
        </div>        
        <h6 class="title">
          <a href="{{ product.url | within: collections.all }}">
            {{ product.title }}            
          </a>
        </h6>
        <div class="meta">       
          {% if product.compare_at_price_max > product.price %} 
            <span class="price price-sale rounded">{{ product.price | money }}</span>
            &mdash;
            <span class="price price-old rounded">{{ product.compare_at_price_max | money }}</span>
          {% else %}
            <span class="price rounded">{{ product.price | money }}</span>
          {% endif %}          
        </div>
		  </div>
      {% endfor %}
    </div>
  </div>
</div>   


	


